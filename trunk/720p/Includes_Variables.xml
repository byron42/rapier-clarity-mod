	<variable name="VideoLibraryBreadCrumbLabel_1">
		<value condition="Substring(Container.FolderPath,videodb://1/,Right) | Substring(Container.FolderPath,videodb://2/,Right) | Substring(Container.FolderPath,videodb://3/,Right) | IsEmpty(Container.FolderPath)">[UPPERCASE]$LOCALIZE[14022][/UPPERCASE] </value> <!--library-->
