			<label></label>
			<focusedcolor></focusedcolor>
			<font></font>
			<texturefocus></texturefocus>
			<texturenofocus></texturenofocus>
			<onup>9000</onup>
			<ondown>9000</ondown>
			<onleft>9000</onleft>
			<onright>9000</onright>
			<visible allowhiddenfocus="true">Player.HasVideo + Control.HasFocus(5000)</visible>
