							<control type="group">
								<posx>0</posx>
								<posy></posy>
								<width>580</width>
								<height>60</height>
								<visible>Player.HasAudio</visible>
								<animation effect="slide" end="20" condition="[Player.HasAudio + !Skin.HasSetting(HidecdArt)]">Conditional</animation>
