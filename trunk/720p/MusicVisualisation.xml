			<!--Mod-group animation ==============-->
				<control type="group">
					<posy>30</posy> 
					<visible>!Skin.HasSetting(HidecdArt)</visible>
					<control type="image">
						<!-- <visible>Player.ShowInfo + !Window.IsVisible(script-XBMC_Lyrics-main.xml)</visible> -->
						<description>Cd overlay</description>
						<animation effect="slide" start="-118" end="0" time="900" tween="cubic" easing="out" delay="1000" reversible="false">WindowOpen</animation>
						<animation effect="fade" start="0" end="100" time="900" delay="1000">Visible</animation>
						<animation type="Hidden">
							<effect type="slide" start="0" end="0" time="0" tween="cubic" easing="in" delay="0" />
							<effect type="fade" start="0" end="0" time="0" delay="0" />
							<condition type="!Player.Playing" />
						</animation>
						<animation type="WindowClose">
							<effect type="fade" start="0" end="0" time="0" tween="cubic" easing="in" delay="0" />
							<effect type="fade" start="0" end="0" time="0" delay="0" />
							<condition type="!Player.Playing" />
						</animation>
						<animation effect="rotate" end="-360" center="auto" time="100" loop="true" reversible="false" condition="true">Conditional</animation>
						<animation effect="rotate" end="360" center="auto" time="100" loop="true" reversible="false" condition="Player.Paused">Conditional</animation>
						<animation effect="rotate" end="-28" center="auto" time="500" reversible="false" condition="Player.Paused">Conditional</animation>
						<animation effect="rotate" end="-15" center="auto" time="500" delay="500" reversible="false" condition="Player.Paused">Conditional</animation>
						<animation effect="rotate" end="-3" center="auto" time="250" delay="1000" reversible="false" condition="Player.Paused">Conditional</animation>
						<width>245</width>
						<height>245</height>
						<posx>170</posx>
						<!--112-->
						<posy>-152</posy>
						<!---143-->
						<texture fallback="backdrops/artist_fanart/default/default.png">backdrops/artist_fanart/cd/$INFO[MusicPlayer.Artist]-$INFO[MusicPlayer.Album].png</texture>
						<aspectratio align="bottom">keep</aspectratio>
					</control>
					
					<!--***************************************** CASE/INFO ANIMATION (NOT CD) ********************************************************-->
					<control type="group">
						<!-- <visible>Player.ShowInfo + !Window.IsVisible(script-XBMC_Lyrics-main.xml)</visible> -->
						<posx>70</posx>
						<posy>-180</posy>
						<animation effect="fade" start="0" end="100" time="900" delay="400">WindowOpen</animation>
						<animation effect="fade" start="0" end="100" time="900" tween="cubic" easing="out" delay="400">Visible</animation>
						<animation effect="fade" start="-500" end="-500" time="500">Hidden</animation>
						<animation effect="fade" start="-500" end="-500" time="500">WindowClose</animation>
					<!--*******************************************************************************************************************************-->
						<control type="image">
							<description>Cover image</description>
							<width>250</width>
							<height>250</height>
							<texture diffuse="cdcover_mask.png">$INFO[MusicPlayer.Cover]</texture>
							<aspectratio align="bottom">keep</aspectratio>
							<posy>25</posy>
						</control>
						<control type="image">
							<description>Cover image overlay</description>
							<width>250</width>
							<height>250</height>
							<texture>home/nowplaying_overlay.png</texture>
							<aspectratio align="bottom">keep</aspectratio>
							<posy>25</posy>
						</control>
						<control type="label">
							<posx>340</posx>
							<posy>45</posy>
							<width>810</width>
							<height>30</height>
							<align>left</align>
							<aligny></aligny>
							<font>Font_OSDMusicTitle</font>
							<textcolor>ThemeColor</textcolor>
							<shadowcolor>white</shadowcolor>
							<label>$INFO[MusicPlayer.Title]</label>
							<animation effect="slide" start="0,0" end="0,-12" time="200" condition="Control.IsVisible(212)">Conditional</animation>
						</control>
						<control type="label">
							<posx>360</posx>
							<posy>93</posy>
							<width>790</width>
							<height>24</height>
							<align>left</align>
							<aligny></aligny>
							<font>Font_OSDMusicArtist</font>
							<textcolor>white</textcolor>
							<shadowcolor>ThemeColor</shadowcolor>
							<label>[UPPERCASE]$INFO[MusicPlayer.Artist][/UPPERCASE]</label>
							<animation effect="slide" start="0,0" end="0,-12" time="200" condition="Control.IsVisible(212)">Conditional</animation>
						</control>
						<control type="label">
							<posx>370</posx>
							<posy>130</posy>
							<width>780</width>
							<height>24</height>
							<align>left</align>
							<aligny></aligny>
							<font>Font_OSDMusicArtist</font>
							<textcolor>white</textcolor>
							<shadowcolor>ThemeColor</shadowcolor>
							<scroll>true</scroll>
							<label>[UPPERCASE]$INFO[MusicPlayer.Album][/UPPERCASE]</label>
							<animation effect="slide" start="0,0" end="0,-12" time="200" condition="Control.IsVisible(212)">Conditional</animation>
						</control>
						<control type="label">
							<posx>370</posx>
							<posy>165</posy>
							<width>780</width>
							<height>24</height>
							<align>left</align>
							<aligny></aligny>
							<font>Font_OSDMusicArtist</font>
							<textcolor>white</textcolor>
							<shadowcolor>ThemeColor</shadowcolor>
							<scroll>true</scroll>
							<label>[UPPERCASE]$INFO[MusicPlayer.Year][/UPPERCASE]</label>
							<animation effect="slide" start="0,0" end="0,-12" time="200" condition="Control.IsVisible(212)">Conditional</animation>
						</control>
						<control type="image">
							<posx>355</posx>
							<posy>175</posy>
							<width>160</width>
