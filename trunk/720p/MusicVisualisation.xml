				<animation effect="slide" start="0,0" end="0,-114" time="250" delay="200">Hidden</animation>
				<!--MUSIC OSD IS VISIBLE FADE-->
				<animation effect="fade" start="100" end="20" delay="0" time="200" condition="Window.IsVisible(120)">Conditional</animation>
				<visible>Player.ShowCodec + ![Window.IsVisible(121) | Window.IsVisible(122)]</visible>
				<control type="group">
					<control type="image">
						<description>gradient</description>
						<posx>-30</posx>
						<posy>0</posy>
						<width>1360</width>
						<height>155</height>
						<colordiffuse>BBBBBBBB</colordiffuse>
						<texture border="10,10,10,10">media-background2.png</texture>
					</control>
					<control type="image">
						<description>small box left</description>
						<posx>15</posx>
						<posy>5</posy>
						<width>400</width>
						<height>120</height>
						<colordiffuse>BB555555</colordiffuse>
						<texture border="10,10,10,10">media-background2.png</texture>
					</control>
					<control type="image">
						<description>small box mid</description>
						<posx>440</posx>
						<posy>20</posy>
						<width>400</width>
						<height>120</height>
						<colordiffuse>BB555555</colordiffuse>
						<texture border="10,10,10,10">media-background2.png</texture>
					</control>
					<control type="image">
						<description>small box right</description>
						<posx>865</posx>
						<posy>5</posy>
						<width>400</width>
						<height>120</height>
						<colordiffuse>BB555555</colordiffuse>
						<texture border="10,10,10,10">media-background2.png</texture>
					</control>
				</control>
				<control type="label">
					<posx>493</posx>
					<posy>30</posy>
					<width>360</width>
					<height>25</height>
					<label>[UPPERCASE]Audio  Information[/UPPERCASE]</label>
					<align>left</align>
					<aligny>center</aligny>
					<font>MediaInfoTitleFont2</font>
					<textcolor>ThemeColor</textcolor>
					<shadowcolor></shadowcolor>
				</control>
				<control type="label">
					<posx>470</posx>
					<posy>55</posy>
					<width>360</width>
					<height>100</height>
					<label>[UPPERCASE]$INFO[musicplayer.Codec, Codec: ,]$INFO[musicplayer.Bitrate,[CR] Bitrate: ,kbps]$INFO[musicplayer.bitspersample,[CR] Bits:,bit]$INFO[musicplayer.Samplerate][/UPPERCASE]</label>
					<align>left</align>
					<aligny>top</aligny>
					<font>DefaultFont</font>
					<textcolor>gray</textcolor>
					<shadowcolor></shadowcolor>
				</control>
				<control type="label">
					<posx>665</posx>
					<posy>55</posy>
					<width>360</width>
					<height>100</height>
					<label>[UPPERCASE]$INFO[musicplayer.Samplerate, Freq: ,kHz]$INFO[musicplayer.Channels,[CR] Channels: ]$INFO[,[CR] XBMC ROCKS ][/UPPERCASE]</label>
					<align>left</align>
					<aligny>top</aligny>
					<font>DefaultFont</font>
					<textcolor>gray</textcolor>
					<shadowcolor></shadowcolor>
				</control>
				<control type="label">
					<posx>35</posx>
					<posy>30</posy>
					<width>360</width>
					<height>25</height>
					<label>[UPPERCASE]$LOCALIZE[250][/UPPERCASE]</label>
					<align>center</align>
					<aligny>center</aligny>
					<font>MediaInfoTitleFont2</font>
					<textcolor>ThemeColor</textcolor>
					<shadowcolor></shadowcolor>
				</control>
				<control type="label">
					<posx>20</posx>
					<posy>55</posy>
					<width>400</width>
					<height>100</height>
					<label>[UPPERCASE]$INFO[Visualisation.Name]  [I]($LOCALIZE[20166])[/I] [CR]fps: $INFO[System.FPS]  [/UPPERCASE]</label>
					<align>center</align>
					<aligny>top</aligny>
					<font>DefaultFont</font>
					<textcolor>gray</textcolor>
					<shadowcolor></shadowcolor>
					<visible>Visualisation.Locked</visible>
				</control>
				<control type="label">
					<posx>40</posx>
					<posy>55</posy>
					<width>360</width>
					<height>25</height>
					<label>[UPPERCASE]$INFO[Visualisation.Name]  [CR]fps: $INFO[System.FPS]  [/UPPERCASE]</label>
					<align>center</align>
					<aligny>top</aligny>
					<font>DefaultFont</font>
					<textcolor>gray</textcolor>
					<shadowcolor></shadowcolor>
					<visible>!Visualisation.Locked</visible>
				</control>
				<control type="label">
					<posx>1182</posx>
					<posy>30</posy>
					<width>360</width>
					<height>25</height>
					<label>[UPPERCASE]Visible  Preset[/UPPERCASE]</label>
					<align>right</align>
					<aligny>center</aligny>
					<font>MediaInfoTitleFont2</font>
					<textcolor>ThemeColor</textcolor>
					<shadowcolor></shadowcolor>
				</control>
				<control type="label">
					<posx>890</posx>
					<posy>55</posy>
					<width>360</width>
					<height>100</height>
					<label fallback="[UPPERCASE]  (UnAvailable)[/UPPERCASE]">[UPPERCASE]$INFO[Visualisation.Preset,,  ][/UPPERCASE]</label>
					<align>center</align>
					<aligny>top</aligny>
					<font>font12</font>
					<scroll>true</scroll>
					<textcolor>gray</textcolor>
					<shadowcolor></shadowcolor>
					<wrapmultiline>true</wrapmultiline>
				</control>
			</control>
			<!--************************************************************************************************************************-->

	<!--(((Spinning disc mod)))=================================================================================================================-->
			<control type="group">
				<posx>0</posx>
				<posy>360</posy>
				<width>1280</width>
				<height>151</height>
				<visible>true</visible>
				<animation effect="fade" end="100" time="400">Visible</animation>
				<animation effect="fade" end="0" time="400">Hidden</animation>
