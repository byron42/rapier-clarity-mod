						<animation effect="fade" start="30" end="70" time="600" pulse="true" condition="true">Conditional</animation>
					</control>
					<control type="image">
						<posx>8</posx>
						<posy>5</posy>
						<width>25</width>
						<height>25</height>
						<texture>defaultvideo.png</texture>
