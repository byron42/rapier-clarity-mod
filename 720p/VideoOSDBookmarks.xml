					</control>
					<control type="label">
						<posx>92</posx>
						<width>55</width>
						<height>35</height>
						<font>VolumeFont</font>
						<textcolor>TopBarStatusColor2</textcolor>
						<align>right</align>
						<aligny>center</aligny>
						<label>$INFO[Weather.Temperature]</label>
						<visible>Control.HasFocus(458)</visible>
					</control>
				</control>
				<!--*************************************************************************************************-->
				
				<!--********************************* MediaPlayingNotification **************************************-->
