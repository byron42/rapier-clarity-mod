<window id="101">
	<defaultcontrol always="true">10</defaultcontrol>
	<coordinates>
		<system>1</system>
		<posx>340</posx>
		<posy>235</posy>
	</coordinates>
	<!--DialogOpenCloseAnim-->
	<animation type="WindowOpen" reversible="false">
		<effect type="zoom" start="50" end="100" center="640,360" easing="out" tween="back" time="350" />
		<effect type="fade" start="0" end="100" time="300" />
	</animation>
	<animation type="WindowClose" reversible="false">
		<effect type="zoom" start="100" end="50" center="640,360" easing="in" tween="back" time="200" />
		<effect type="fade" start="100" end="0" time="250" />
	</animation>
	<controls>
	    <control type="group">
			<animation effect="fade" start="100" end="0" delay="400" time="300" condition="Window.IsActive(Favourites)">Conditional</animation>
			<animation effect="fade" start="100" end="0" delay="200" time="150" condition="Window.IsVisible(PlayerControls) | Window.IsActive(ShutdownMenu) | Window.IsActive(selectdialog) | Window.IsActive(virtualkeyboard) | Window.IsActive(10140) | Window.IsActive(129) | Window.IsActive(126) | Window.IsActive(selectdialog)">Conditional</animation>
			<control type="image">
				<posx>0</posx>
				<posy>0</posy>
				<width>600</width> 
				<height>230</height>
				<colordiffuse>-</colordiffuse>
				<texture border="50,70,50,75">dialog-box1.jpg</texture>
			</control>
			<control type="label" id="1">
				<description>DialogTitleFont</description>
				<posx>0</posx>
				<posy>0</posy>
				<width>0</width>
				<height>0</height>
				<font>MenuBarButtonFont4</font>
				<visible>false</visible>
			</control>
			<control type="image">
				<description>label back</description>
				<posx>7</posx>
				<posy></posy>
				<width>586</width>
				<height>52</height>	
				<texture border="10">ListViewItemBack.png</texture>
				<colordiffuse>aaffffff</colordiffuse>
			</control>	
			<control type="label">	
				<description>header label</description>
				<posx>20</posx>
				<posy>10</posy>
				<width>560</width>
				<height>30</height>
				<font>Font_Lib22</font>
				<label>$INFO[Control.GetLabel(1)] $INFO[System.Progressbar,- ,%]</label>
				<align>left</align>
				<aligny>center</aligny>
				<textcolor>ThemeColor</textcolor>
				<shadowcolor>black</shadowcolor>
			</control>
			<!--***************** separator *********************-->
			<control type="image"> 
				<description>header separator</description>
				<posx>6</posx>
				<posy>50</posy>
				<width>588</width>
				<height>4</height>
				<texture>slider_nibfo.png</texture>
				<colordiffuse>cc626262</colordiffuse>
			</control>
			<!--*************************************************-->
			<control type="group">
				<posy>2</posy>
				<control type="label" id="2">
					<description>Dialog Line 1</description>
					<posx>20</posx>
					<posy>55</posy>
					<width>560</width>
					<height>30</height>
					<align>left</align>
					<aligny>top</aligny>
					<label>-</label>
					<haspath>true</haspath>
					<font>font12</font>
					<textcolor>ThemeColor2</textcolor>
					<shadowcolor>black</shadowcolor>
				</control>
				<control type="label" id="3">
					<description>Dialog Line 2</description>
					<posx>20</posx>
					<posy>75</posy>
					<width>560</width>
					<height>30</height>
					<align>left</align>
					<aligny>top</aligny>
					<label>-</label>
					<haspath>true</haspath>
					<font>font12</font>
					<textcolor>ThemeColor2</textcolor>
					<shadowcolor>black</shadowcolor>
				</control>
				<control type="label" id="4">
					<description>Dialog Line 3</description>
					<posx>20</posx>
					<posy>110</posy>
					<width>560</width>
					<height>30</height>
					<align>left</align>
					<aligny>center</aligny>
					<label>-</label>
					<haspath>true</haspath>
					<font>VolumeFont</font>
					<textcolor>ThemeColor2</textcolor>
					<shadowcolor>black</shadowcolor>
				</control>
			</control>
			<control type="progress">
				<description>Progressbar</description>
				<!--THIS CHANGES THE SIZE AND POSITION OF THE PROGRESS BAR-->
				<posx>20</posx>
				<posy>147</posy>
				<width>560</width>
				<height>10</height>
				<info>System.Progressbar</info>
			</control>
			<control type="button" id="10">
				<description>Cancel button</description>
				<posx>200</posx>
				<posy>170</posy>
				<width>200</width>
				<height>40</height>
				<label>222</label>
				<font>HeadFont</font>
				<textcolor>ff626262</textcolor>
				<focusedcolor>ThemeColor</focusedcolor>
				<align>center</align>
				<aligny>top</aligny>
				<textoffsety>1</textoffsety>
				<shadowcolor></shadowcolor>
				<texturenofocus>-</texturenofocus>
				<texturefocus border="0">menu-bar-button-focus2.png</texturefocus>
				<colordiffuse>aaffffff</colordiffuse>
				<onleft>10</onleft>
				<onright>10</onright>
				<onup>10</onup>
				<ondown>10</ondown>
			</control>
		</control>
	</controls>
</window>