<window id="142">
	<defaultcontrol always="true">1</defaultcontrol>
	<animation effect="fade" time="250">WindowOpen</animation>
	<animation effect="fade" time="250">WindowClose</animation>
	<controls>
		
		<control type="group">
			<animation effect="fade" start="100" end="0" delay="400" time="300" condition="Window.IsActive(Favourites)">Conditional</animation>
			<animation effect="fade" start="100" end="0" delay="200" time="150" condition="Window.IsVisible(PlayerControls) | Window.IsActive(ShutdownMenu) | Window.IsActive(selectdialog) | Window.IsActive(virtualkeyboard)">Conditional</animation>
			<!--little dialog fade out-->
			<animation effect="fade" start="100" end="30" delay="0" time="200" condition="Window.IsActive(100) | Window.IsActive(contextmenu) | Window.IsActive(numericinput) | Window.IsActive(101) | Window.IsActive(2002)">Conditional</animation>	
			<!--VIDEO OSD IS VISIBLE FADE-->
			<!-- <animation effect="fade" start="100" end="65" delay="0" time="200" condition="Window.IsVisible(2901)">Conditional</animation>	 -->
			<posx></posx>
			<posy></posy>
			<control type="group" id="401">
				<visible>![Window.IsVisible(SliderDialog) | Window.IsVisible(OSDVideoSettings) | Window.IsVisible(OSDAudioSettings) | Window.IsVisible(VideoBookmarks)]</visible>
				<animation effect="fade" start="100" end="0"  time="250" condition="Window.IsActive(ShutdownMenu) + Window.IsActive(2901)">Conditional</animation>
				<animation effect="slide" start="0,-400" end="0,0" time="250" tween="quadratic" easing="out">WindowOpen</animation>
				<animation effect="fade" end="100" time="250" delay="150" condition="">Visible</animation>
				<animation effect="fade" end="100" time="250" condition="">Hidden</animation>
				<animation effect="slide" start="0,0" end="0,-400" time="250" delay="0" tween="quadratic" easing="out">WindowClose</animation>
				<!-- videoOSD visible slide -->
				<animation effect="slide" end="0,115" time="250" tween="circle" easing="out" condition="Window.IsActive(2901)">Conditional</animation>
				<control type="image">
					<description>media info background image</description>
					<posx>-10</posx>
					<posy>-3</posy>
					<width>1300</width>
					<height>165</height>
					<texture border="10">$VAR[OSD_BackgroundColor]</texture>
					<colordiffuse>$VAR[OSD_BackgroundDiffuse]</colordiffuse>
				</control>
				
				<!--**************************PLAYER CONTROL ACTION *******************************-->
				<control type="group">	
					<posx>300</posx>
					<posy>715r</posy>
					<animation effect="fade" start="0" end="100" time="250" delay="100">Visible</animation>
					<animation effect="fade" start="100" end="0" time="250" condition="!Window.IsActive(2901)">Hidden</animation>
					<animation effect="fade" start="100" end="0" time="100" condition="Window.IsActive(2901)">Conditional</animation>
					<visible>Player.Paused | Player.Seeking | Player.Forwarding | Player.Rewinding | Player.Caching</visible>
					<control type="label">
						<visible>!Window.IsActive(2901)</visible>
						<description>PlayerControlLabel</description>
						<posx>815</posx>
						<posy>115</posy>
						<width>160</width>
						<height>100</height>
						<align>center</align>
						<textwidth>160</textwidth>
						<font>MenuBarButtonFont</font>
						<textcolor>gray</textcolor>
						<shadowcolor>black</shadowcolor>
						<label>$VAR[PlayerControlActionLabel]</label>
					</control>
					<control type="image" id="1000">
						<description>PlayerControlImage</description>
						<posx>847</posx>
						<posy>12</posy>
						<!-- <posy>25</posy> -->
						<width>100</width>
						<height>100</height>
						<align>center</align>
						<aligny>-</aligny>
						<textoffsety>103</textoffsety>
						<textwidth>120</textwidth>
						<font>MenuBarButtonFont2</font>
						<textcolor>gray</textcolor>
						<shadowcolor>black</shadowcolor>
						<texture>$VAR[PlayerControlActionImage]</texture>
						<visible>Player.Seeking | Player.Paused | Player.Forwarding | Player.Rewinding | Player.Caching</visible>
					</control>
				</control>
				<!--*******************************************************************************-->
				
	<!--(((MAIN BAR WITH CONTROLS)))========================================================================================================-->		
				<control type="group">	
					<!--zoom for Player Actions-->
					<animation effect="zoom" start="300,715r,1280,720" end="300,715r,1080,720" time="150" condition="Player.HasVideo  + !Window.IsActive(2901) + [Player.Seeking | Player.Paused | Player.Forwarding | Player.Rewinding]">Conditional</animation>
					<control type="group">
						<posx>300</posx>
						<posy>715r</posy>
						<control type="grouplist">
							<posx>0</posx>
							<posy>20</posy>
							<usecontrolcoords>true</usecontrolcoords>
							<orientation>vertical</orientation>
							<control type="label">
								<posx></posx>
								<posy></posy>
								<width>950</width>
								<height>30</height>
								<label>$VAR[PlayerControlTitle]</label>
								<scroll>true</scroll>
								<align>left</align>
								<aligny>center</aligny>
								<font>Font_OSDMusicTitle</font>
								<textcolor>white</textcolor>
								<shadowcolor>ThemeColor</shadowcolor>
							</control>
							<control type="label">
								<posx></posx>
								<posy></posy>
								<width>950</width>
								<height>30</height>
								<font>Font_OSDMusicArtist</font>
								<textcolor>ThemeColor2</textcolor>
								<shadowcolor></shadowcolor>
								<label>$VAR[PlayerControlArtist]</label>
								<align>left</align>
								<aligny>center</aligny>
							</control>
							<control type="image">
								<posx>-10</posx>
								<posy>75</posy>
								<width>220</width>
								<height>38</height>
								<texture>$INFO[Player.StarRating]</texture>
								<aspectratio>stretch</aspectratio>
								<colordiffuse>ThemeColor2</colordiffuse>
							</control>
						</control>
					<!--progress-->
						<control type="group">
							<posy>5</posy>
							<control type="progress">
								<description>Progressbar</description>
								<posx>0</posx>
								<posy>87</posy>
								<width>950</width>
								<height>11</height>
								<info>Player.Progress</info>
								<visible>!Player.Caching</visible>
							</control>
							<control type="progress">
								<description>Player Caching Progress Bar</description>
								<posx>0</posx>
								<posy>87</posy>
								<width>950</width>
								<height>11</height>
								<reveal>true</reveal>
								<midtexture border="2">scrollbar-slider-horz-focus.png</midtexture>
								<info>Player.CacheLevel</info>
								<visible>Player.Caching</visible>
							</control>
							<control type="label">
								<description>Buffer %</description>
								<posx>0</posx>
								<posy>111</posy>
								<width>375</width>
								<height>20</height>
								<font>font13_title</font>
								<textcolor>ThemeColor</textcolor>
								<align>left</align>
								<aligny>center</aligny>
								<label>[UPPERCASE]$LOCALIZE[15107][/UPPERCASE] $INFO[Player.CacheLevel]%</label>
								<visible>Player.Caching</visible>
							</control>
							<control type="label">
								<description>Elapsed Time Label</description>
								<posx>0</posx>
								<posy>111</posy>
								<width>375</width>
								<height>20</height>
								<font>font13_title</font>
								<textcolor>white</textcolor>
								<align>left</align>
								<aligny>center</aligny>
								<label>$INFO[Player.Time]</label>
								<visible>!Player.Seeking + !Player.Caching</visible>
							</control>
							<control type="label">
								<description>Seek Time Label</description>
								<posx>0</posx>
								<posy>111</posy>
								<width>375</width>
								<height>20</height>
								<font>font13_title</font>
								<textcolor>white</textcolor>
								<align>left</align>
								<aligny>center</aligny>
								<label>$INFO[Player.SeekTime]</label>
								<visible>Player.Seeking + !Player.Caching</visible>
							</control>
							<control type="label">
								<posx>950</posx>
								<posy>111</posy>
								<width>370</width>
								<height>25</height>
								<label>$INFO[Player.Duration]</label>
								<align>right</align>
								<aligny>center</aligny>
								<font>font13_title</font>
								<textcolor>white</textcolor>
								<shadowcolor>black</shadowcolor>
							</control>
						</control>
					</control>
					
	<!--(((MEDIA FLAGS AREA)))==============================================================================================================-->		
					<control type="group">
						<posx>0</posx>
						<posy>0</posy>
						<width>580</width>
						<height>60</height>
						<visible>Player.HasVideo</visible>
						<animation effect="fade" end="45" condition="true">Conditional</animation>
						<!--**************************** VideoInfoStudioMediaFlag **********************************-->
						<control type="image">
							<posx>900</posx>
							<posy>115</posy>
							<width>161</width>
							<height>109</height>
							<aspectratio>keep</aspectratio>
							<fadetime>MediaFlagsCrossfadeTime</fadetime>
							<!-- <texture>$INFO[VideoPlayer.Studio,flagging/Studios/,.png]</texture> -->
						</control>
						<!--****************************************************************************************-->
						<control type="grouplist">
							<description>Media Flags Area</description>
							<posx>490</posx>
							<posy>102</posy>
							<width>580</width>
							<height>60</height>
							<itemgap>6</itemgap>
							<align>center</align>
							<visible>!Skin.HasSetting(HideMediaFlags)</visible>
							<orientation>horizontal</orientation>
							<usecontrolcoords>true</usecontrolcoords>
							<!--***************************** VideoMediaFlags *************************************-->
							<control type="image">
								<description>Blu-ray Image</description>
								<width>90</width>
								<height>60</height>
								<aspectratio>keep</aspectratio>
								<texture>flagging/video/bluray.png</texture>
								<fadetime>MediaFlagsCrossfadeTime</fadetime>
								<visible>substring(VideoPlayer.filename,.bluray) | substring(VideoPlayer.filename,.blu-ray) | substring(VideoPlayer.filename,.brrip)</visible>
							</control>
							<control type="image">
								<description>HDDVD Image</description>
								<width>120</width>
								<height>60</height>
								<aspectratio>keep</aspectratio>
								<texture>flagging/video/hddvd.png</texture>
								<fadetime>MediaFlagsCrossfadeTime</fadetime>
								<visible>substring(VideoPlayer.filename,hddvd) | substring(VideoPlayer.filename,hd-dvd)</visible>
							</control>
							<control type="image">
								<description>DVD Image</description>
								<width>90</width>
								<height>60</height>
								<aspectratio>keep</aspectratio>
								<texture>flagging/video/dvd.png</texture>
								<fadetime>MediaFlagsCrossfadeTime</fadetime>
								<visible>substring(VideoPlayer.filename,sddvd) | substring(VideoPlayer.filename,.ifo,Right) | substring(VideoPlayer.filename,.img,Right) | substring(VideoPlayer.filename,.iso,Right) | substring(VideoPlayer.filename,.vob,Right)</visible>
							</control>
							<control type="image">
								<description>HDTV Image</description>
								<width>90</width>
								<height>60</height>
								<aspectratio>keep</aspectratio>
								<texture>flagging/video/hdtv.png</texture>
								<fadetime>MediaFlagsCrossfadeTime</fadetime>
								<visible>substring(VideoPlayer.filename,hdtv)</visible>
							</control>
							<control type="image">
								<description>DVDRIP Image</description>
								<width>90</width>
								<height>60</height>
								<aspectratio>keep</aspectratio>
								<texture>flagging/video/dvdrip.png</texture>
								<fadetime>MediaFlagsCrossfadeTime</fadetime>
								<visible>substring(VideoPlayer.filename,dvdrip)</visible>
							</control>
							<control type="image">
								<description>DVDR5 Image</description>
								<width>90</width>
								<height>60</height>
								<aspectratio>keep</aspectratio>
								<texture>flagging/video/dvdr5.png</texture>
								<fadetime>MediaFlagsCrossfadeTime</fadetime>
								<visible>substring(VideoPlayer.filename,dvdr5) | substring(VideoPlayer.filename,.r5)</visible>
							</control>
							<control type="image">
								<description>DVD SCREENER Image</description>
								<width>90</width>
								<height>60</height>
								<aspectratio>keep</aspectratio>
								<texture>flagging/video/dvdscreener.png</texture>
								<fadetime>MediaFlagsCrossfadeTime</fadetime>
								<visible>substring(VideoPlayer.filename,dvdscreener) | substring(VideoPlayer.filename,dvdscr) | substring(VideoPlayer.filename,.screener)</visible>
							</control>
							<control type="image">
								<description>TELESYNC Image</description>
								<width>90</width>
								<height>60</height>
								<aspectratio>keep</aspectratio>
								<texture>flagging/video/telesync.png</texture>
								<fadetime>MediaFlagsCrossfadeTime</fadetime>
								<visible>substring(VideoPlayer.filename,telesync) | substring(VideoPlayer.filename,.ts.)</visible>
							</control>
							<control type="image">
								<description>CAM Image</description>
								<width>90</width>
								<height>60</height>
								<aspectratio>keep</aspectratio>
								<texture>flagging/video/cam.png</texture>
								<fadetime>MediaFlagsCrossfadeTime</fadetime>
								<visible>substring(VideoPlayer.filename,.CAM)</visible>
							</control>
							<control type="image">
								<description>Video Res Image</description>
								<width>70</width>
								<height>60</height>
								<aspectratio>keep</aspectratio>
								<fadetime>MediaFlagsCrossfadeTime</fadetime>
								<texture>$INFO[VideoPlayer.VideoResolution,flagging/VideoResolution/,.png]</texture>
							</control>
							<control type="image">
								<description>Codec Image</description>
								<width>80</width>
								<height>60</height>
								<aspectratio>keep</aspectratio>
								<texture>$INFO[VideoPlayer.VideoCodec,flagging/VideoCodec/,.png]</texture>
								<fadetime>MediaFlagsCrossfadeTime</fadetime>
							</control>
							<!--*********************************************************************************-->
							
							<!--********************************* AudioMediaFlags *******************************-->
							<control type="image">
								<description>MP3 Codec Image</description>
								<posy>2</posy>
								<width>80</width>
								<height>60</height>
								<aspectratio>keep</aspectratio>
								<texture>$INFO[VideoPlayer.AudioCodec,flagging/AudioCodec/,.png]</texture>
								<fadetime>MediaFlagsCrossfadeTime</fadetime>
							</control>
							<control type="image">
								<description>Audio Channels Image</description>
								<width>70</width>
								<height>60</height>
								<aspectratio>keep</aspectratio>
								<texture>$INFO[VideoPlayer.AudioChannels,flagging/AudioChannels/,.png]</texture>
								<fadetime>MediaFlagsCrossfadeTime</fadetime>
							</control>
							<!--*********************************************************************************-->
							
							<!--******************************** AspectMediaFlags *******************************-->
							<control type="image">
								<description>Aspectratio Image</description>
								<posx>2</posx>
								<posy>1</posy>
								<width>63</width>
								<height>60</height>
								<aspectratio>keep</aspectratio>
								<texture>$INFO[VideoPlayer.VideoAspect,flagging/AspectRatio/,.png]</texture>
								<fadetime>MediaFlagsCrossfadeTime</fadetime>
							</control>
							<!--*********************************************************************************-->
						</control>
					</control>
				</control>
	
	<!--(((ICONS)))======================================================================================================================================-->		
				<control type="group">
					<posx></posx>
					<posy></posy>
					<visible>Player.HasVideo</visible>
					<control type="image">
						<description>cover image</description>
						<posx>7</posx>
						<posy>700r</posy>
						<width>280</width>
						<height>320</height>
						<texture>$INFO[VideoPlayer.cover]</texture>
						<aspectratio aligny="top">keep</aspectratio>
						<bordertexture border="10">Glass/keyfocus.png</bordertexture>
						<bordersize>14</bordersize>
					</control>
				</control>
			</control>
		</control>
	</controls>
</window>