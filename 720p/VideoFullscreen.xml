<window id="2005">
	<defaultcontrol></defaultcontrol>
	<controls>
		<control type="group">
			<animation effect="fade" start="100" end="0" delay="400" time="300" condition="Window.IsActive(Favourites)">Conditional</animation>
			<animation effect="fade" start="100" end="0" delay="200" time="150" condition="Window.IsActive(ShutdownMenu) | Window.IsActive(selectdialog) | Window.IsActive(virtualkeyboard)">Conditional</animation>	
			<!--little dialog fade out-->
			<animation effect="fade" start="100" end="30" delay="0" time="200" condition="Window.IsActive(100) | Window.IsActive(contextmenu) | Window.IsActive(numericinput) | Window.IsActive(101) | Window.IsActive(2002)">Conditional</animation>
			<!--VIDEO OSD IS VISIBLE FADE-->
			<!-- <animation effect="fade" start="100" end="20" delay="0" time="200" condition="Window.IsVisible(2901)">Conditional</animation> -->
			<control type="group">
				<!--*********************************************** Codec Box ***************************************************-->
				<posx></posx>
				<posy></posy>
				<!--VisibleFadeEffect-->
				<animation effect="slide" start="0,-400" end="0,0" time="250" tween="circle" easing="out" delay="0">WindowOpen</animation>
				<animation effect="slide" start="0" end="0,-400" time="250" delay="200">WindowClose</animation>
				<animation effect="slide" start="0,-400" end="0,0" time="250" tween="circle" easing="out" delay="200">VisibleChange</animation>
				<animation effect="slide" end="0,123" time="250" tween="quadratic" easing="out" condition="Window.IsActive(2901)">Conditional</animation>
				<!-- OSD/FullscreenVid Both Visible -->
				<animation effect="slide" start="0,0" end="0,-400" time="150" tween="quadratic" easing="out" condition="[Window.IsVisible(OSDVideoSettings) | Window.IsVisible(OSDAudioSettings)] + Window.IsActive(2901)">Conditional</animation>
				
				<!--*************************************************************************************************************-->
				<visible>Player.HasVideo + !Window.IsActive(142)</visible>
				<control type="image">
					<description>gradient</description>
					<posx>-30</posx>
					<posy>-10</posy>
					<width>1360</width>
					<height>155</height>
					<texture border="10">$VAR[OSD_BackgroundColor]</texture>
					<colordiffuse>$VAR[OSD_BackgroundDiffuse]</colordiffuse>
				</control>
				<control type="grouplist">
					<visible>Player.HasVideo + !Window.IsActive(142)</visible><animation effect="slide" start="0,-114" end="0,0" time="250" tween="circle" easing="out" delay="200">VisibleChange</animation>
					<posx>10</posx>
					<posy>0</posy>
					<itemgap>40</itemgap>
					<control type="label" id="10">
						<description>Row 1</description>
						<width>1260</width>
						<font>MediaInfoFont</font>
						<textcolor>DefaultColor</textcolor>
						<shadowcolor>black</shadowcolor>
					</control>
					<control type="label" id="11">
						<description>Row 2</description>
						<width>1260</width>
						<wrapmultiline>true</wrapmultiline>
						<font>MediaInfoFont</font>
						<textcolor>DefaultColor</textcolor>
						<shadowcolor>black</shadowcolor>
					</control>
					<control type="label" id="12">
						<description>Row 3</description>
						<width>1260</width>
						<font>MediaInfoFont</font>
						<textcolor>DefaultColor</textcolor>
						<shadowcolor>black</shadowcolor>
					</control>
				</control>
			</control>	
		</control>	
	</controls>
</window>