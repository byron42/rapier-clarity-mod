<window>
	<defaultcontrol>101</defaultcontrol>
	<!-- DialogOpenCloseAnim -->
	<animation type="WindowOpen">
		<effect type="fade" end="100" time="150"/>
		<effect type="slide" start="0,-45" time="200" tween="circle" easing="out"/>
	</animation>	
	<animation type="WindowClose">
		<effect type="fade" end="0" time="150" />
		<effect type="slide" end="0,45" time="200" tween="circle" easing="out"/>
	</animation>
	<coordinates>
		<system>1</system>
		<posx>30</posx>
		<posy>70</posy>
	</coordinates>
	<controls>
	
		<!-------- OpenSubtitlesOSDDialogBox --------------------------------------------------------------------------->
		<control type="image">
			<width>710</width>
			<height>531</height>
			<texture border="50,70,50,75">dialog-box1.jpg</texture>
		</control>
		<!-------- OpenSubtitlesOSDDialogBox --------------------------------------------------------------------------->
		
		<control type="label">
			<posx>DialogMarginOffsetX</posx>
			<posy>26</posy>
			<width>630</width>
			<font>DialogTitleFont</font>
			<textcolor>DialogTitleColor</textcolor>
			<shadowcolor>ShadowColor</shadowcolor>
			<align>center</align>
			<aligny>top</aligny>
			<label>$LOCALIZE[31301]</label>
		</control>
		<control type="group">
		  <!-- ** Required ** Do not change <id> or <type> -->
			<control type="image">
				<posx>DialogMarginOffsetX</posx>
				<posy>DialogMarginOffsetY</posy>
				<width>630</width>
				<height>60</height>
				<texture border="5">button-nofocus.png</texture>
			</control>
			<control type="group" id="110">
				<control type="image" >
					<description>page header tab icon</description>
					<posx>45</posx>
					<posy>64</posy>
					<width>250</width>
					<height>50</height>
					<texture>opensubtitles/logo_opensubtitles.png</texture>      
				</control>
			</control>
			<control type="group" id="111">
				<control type="image" >
					<description>page header tab icon</description>
					<posx>45</posx>
					<posy>64</posy>
					<width>250</width>
					<height>50</height>
					<texture>opensubtitles/Sublight_logo.png</texture>        
				</control>
			</control>
			<control type="group" id="112">
				<control type="image" >
					<description>page header tab icon</description>
					<posx>45</posx>
					<posy>64</posy>
					<width>250</width>
					<height>40</height>
					<texture>opensubtitles/podnapisi.png</texture>
					<visible>!Control.IsVisible(111) + !Control.IsVisible(110)</visible>
				</control>
			</control>
			<control type="label" id="300">
				<description>textarea</description>
				<posx>310</posx>	
				<posy>477</posy>
				<width>178</width>
				<height>46</height>
				<font>ButtonFont</font>
				<textcolor>ButtonColor</textcolor>
				<shadowcolor>ShadowColor</shadowcolor>
				<align>right</align>
				<aligny>center</aligny>
			</control>    
