<window id="122">
	<defaultcontrol>2</defaultcontrol>
	<!-- BackgroundOpenCloseAnim -->
	<animation effect="fade" start="0" end="100" time="300" delay="500">WindowOpen</animation> 
	<animation effect="fade" start="100" end="0" time="100">WindowClose</animation>
